@model DeleteManufactory
@{ ViewData["Title"] = "Delete Manufactory"; }
<form asp-controller="Home" asp-action="delete" method="DELETE">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-3">
            <label asp-for="ManafactoryId"></label>
        </div>
        <div class="col-9">
            <input asp-for="ManafactoryId" class="form-control" />
            <span asp-validation-for="ManafactoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="reset" class="btn btn-warning">Cancel</button>
        </div>
    </div>
</form>